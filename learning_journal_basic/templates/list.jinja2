{% extends "index.jinja2" %}
{% block body %}
  {% if entries %}
    {% for entry in entries %}
      <article>
        <h2><a href="{{ request.route_url('detail_view', id=entry.id) }}">{{ entry.title }}</a></h2>
        <hr />
        <p>Created <strong>{{ entry.creation_date }}</strong></p>
      </article>
    {% endfor %}
  {% else %}
    <p>This journal is empty</p>
  {% endif %}
{% endblock %}
